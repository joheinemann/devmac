#!/usr/bin/env bash

set -e

export -n CDPATH

if [ "$1" = "--debug" ]; then
  export DEVMAC_DEBUG=1
  shift
fi

if [ -n "$DEVMAC_DEBUG" ]; then
  export PS4='+ [${BASH_SOURCE##*/}:${LINENO}] '
  set -x
fi


# ----------------------------  Main functions  --------------------------------


